= form_for([@order, @ordersent]) do |f|
  -if @ordersent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ordersent.errors.count, "error")} prohibited this ordersent from being saved:"
      %ul
        - @ordersent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :who, 'Кому'
    = f.text_field :who
  .field
    = f.label :letter, 'Номер и дата сопроводительного письма'
    = f.text_field :letter
  .field
    = f.label :copy_count, 'Количество экз.'
    = f.number_field :copy_count
  .field
    = f.label :delo, 'Номер дела, в которое подшит документ, страница'
    = f.text_field :delo
  .actions
    = f.submit 'Сохранить'
