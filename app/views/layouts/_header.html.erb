<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to "Главная", root_path %></li>
      <% if user_signed_in? && current_user.admin? %>
      <li><%= link_to "Пользователи", admin_users_path %></li>
      <% end %>
      <% if user_signed_in? %>
      <li><%= link_to "Профиль", current_user %></li>
      <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
      <% end %>
      <li><%= link_to "Помощь", help_path %></li>
      <% if user_signed_in? %>
      <li><%= link_to "Выход", destroy_user_session_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Вход", new_user_session_path %></li>
      <% end %>
    </ul>
  </nav>
</header>